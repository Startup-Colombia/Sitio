{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "typeRoots": ["../node_modules/@types"],
    "lib": ["dom", "es2015", "scripthost"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "prerender.ts",
    "generateSitemap.ts",
    "typings/index.d.ts"
  ],
  "include": [
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
